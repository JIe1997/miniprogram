/* pages/yw/ys.wxss */
.yw-h1{
  margin:60rpx 0 20rpx;
  color:#fff;
  font-size: 50rpx;
}

.yw-li {
  box-sizing: border-box;
  display: flex;
  padding:28rpx;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  background: rgb(253, 255, 254);
  width:680rpx;
  border-radius: 10rpx;
  justify-content:flex-start;
  box-shadow: 0 2rpx 6rpx 8rpx rgba(0,0,0,.1);
}
.yw-li text{
  width: 100%;
  text-align: left;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.yw-li .yw-title{
  font-size: 40rpx;
  font-family: "Arial";
  font-weight: 400;
  margin-bottom:10rpx;
}

.towrite{
  position: fixed;
  bottom:60rpx;
  left:50%;
  transform: translateX(-50%);
  margin-top: 80rpx;
  width:400rpx;
  background-color:red;
  color:#fff;
  font-weight: bolder;
  text-align: center;
  height:100rpx;
  border-radius: 20rpx;
  line-height:100rpx;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.towrite image{
  width:60rpx;
  margin-right:18rpx;
}